<%= form_for(@rss_url) do |f| %>
  <% if @rss_url.errors.any? %>
    <div id="error_explanation">
      <h2><%= t(:header, :model => t(:rss_url, :scope => [:activerecord, :models]), :count => @rss_url.errors.count, :scope => [:activerecord, :errors, :template]) %></h2>
      <p><%= t(:body, :scope => [:activerecord, :errors, :template]) %></p>
      <ul>
      <% @rss_url.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="label_field">
    <%= f.label t('activerecord.attributes.rss_url.sort_number') %>
  </div>
  <div class="input_field">
    <%= f.text_field :sort_number, :class => 'numeric' %>
  </div>
  </br>

  <div class="label_field">
    <%= f.label t('activerecord.attributes.rss_url.name') %>
  </div>
  <div class="input_field">
    <%= f.text_field :name, :class => 'string' %>
  </div>
  </br>

  <div class="label_field">
    <%= f.label t('activerecord.attributes.rss_url.url') %>
  </div>
  <div class="input_field">
    <%= f.text_field :url, :class => 'string' %>
  </div>
  </br>

  <div class="label_field">
    <%= f.label t('activerecord.attributes.rss_url.limit_count') %>
  </div>
  <div class="input_field">
    <%= f.text_field :limit_count, :class => 'numeric' %>
  </div>
  </br>

  <div class="actions">
    <%= f.submit t('label.rss_url.update'), :class => 'button' %>
  </div>
<% end %>
