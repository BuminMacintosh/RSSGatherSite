<h1>登録済みRSS一覧</h1>

<table>
  <tr>
    <th>並び順</th>
    <th>名前</th>
    <th>RSS URL</th>
    <th>コンテンツ取得件数</th>
    <th></th>
    <th></th>
  </tr>

<% @rss_urls.each do |rss_url| %>
  <tr>
    <td><%= rss_url.Rss_Url_id_seq %></td>
    <td><%= rss_url.Site_Name %></td>
    <td><%= rss_url.Site_Url %></td>
    <td><%= rss_url.Getting_Count %></td>
    <td><%= link_to '編集', edit_rss_url_path(rss_url) %></td>
    <td><%= link_to '削除', rss_url, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
  </tr>
<% end %>
</table>

